<% layout("/layouts/boilerplate") %>

<body>
<div class="row">
    <div class="col-8 offset-3">
        <h2 class="mt-3">Your Listing...</h2>
    </div>

    <div class="card col-6 offset-3">
        <img src="<%= listing.image %>" class="card-img-top show-img" alt="Property Image">
        <div class="card-body">
          <p class="card-text">
            <b><%= listing.title %></b> <br>
            <%= listing.description %> <br>
            &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
            <%= listing.location %> <br>
            <%= listing.country %>
          </p>
        </div>
    </div>
    

    <br>
    <div class="btns col-1 offset-3 mt-3">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-success">Edit</a>

        <form method="POST" action="/listings/<%= listing._id %>?_gaurav=DELETE">
            <button class="btn btn-danger col offset-5">Delete</button>
        </form>
    </div>    
</div>
</body>


