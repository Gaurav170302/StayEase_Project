<% layout("/layouts/boilerplate") %>

<body>
<div class="row mt-3">
<div class="col-8 offset-2">
    <h2 class="mb-3">Add New Listing...</h2>
    <form  method="POST" action="/listings">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input type="text" name="gaurav[title]" placeholder="Enter your title" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea type="text" name="gaurav[description]" placeholder="Enter description" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input type="file" name="image" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label>
                <input type="number" name="gaurav[price]" placeholder="&#8377;" class="form-control">
            </div>
            <div class="mb-3 col-md">
                <label for="country" class="form-label">Country</label>
                <input type="text" name="gaurav[country]" placeholder="India" class="form-control">
            </div>
        </div>    
        <div class="mb-3">
            <label for="location">Location</label>
            <input type="text" name="gaurav[location]" placeholder="Mumbai, Pune" class="form-control">
        </div>
        
        <button class="btn add-btn mb-3 mt-3">Add</button>
       
    </form>
</div>    
</div>
</body>
