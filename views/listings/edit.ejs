<% layout("/layouts/boilerplate") %>

<body>
<div class="row mt-3">
<div class="col-8 offset-2">
    <h2 class="mb-3">Edit Your Listing...</h2>
    <form  method="POST" action="/listings/<%= listing._id %>?_gaurav=PUT" novalidate class="needs-validation">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input required type="text" name="gaurav[title]" value="<%= listing.title %>" class="form-control">
            <div class="valid-feedback">
                Title looks good.
            </div>
            <div class="invalid-feedback">
                Title should be Valid.
            </div>
        </div>
        
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea required type="text" name="gaurav[description]" rows="6" cols="30" class="form-control"><%= listing.description %></textarea>
            <div class="valid-feedback">
                Nice Description.
            </div>
            <div class="invalid-feedback">
                Description should be Valid.
            </div>
        </div>

        <div class="mb-3">
            <label for="image" class="form-label">Image</label>
            <input required type="text" name="gaurav[image]" value="<%= listing.image %>" class="form-control">
            <div class="invalid-feedback">
                Image link should be Valid.
            </div>
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label">Price</label> 
                <input required type="number" name="gaurav[price]" value="<%= listing.price %>" class="form-control">
                <div class="invalid-feedback">
                    Price should be Valid.
                </div>
            </div>
            <div class="mb-3 col-md">
                <label for="country" class="form-label">Country</label>
                <input required type="text" name="gaurav[country]" value="<%= listing.country %>" class="form-control">
                <div class="invalid-feedback">
                   Country name should be Valid.
                </div>
            </div>
        </div>
       
        <div class="mb-3">
            <label for="location">Location</label>
            <input required type="text" name="gaurav[location]" value="<%= listing.location %>" class="form-control">
            <div class="invalid-feedback">
                Location should be Valid.
            </div>
        </div>
        
       
        <button class="btn edit-btn mb-3 mt-3">Edit</button>
    </form>
</div>
</div>    
</body>
